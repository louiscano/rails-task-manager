<div class="p-5">
<h1>Edit Task</h1>
<div class="col-2 mb-3">
<%= form_with model: @task do |f| %>
  <div class="mb-2">
  <%= f.label :title %>
  <%= f.text_field :title, class:"form-control"%>
  </div>
  <div class="mb-2">
  <%= f.label :details %>
  <%= f.text_field :details, class:"form-control mb-3" %>
  </div>
  <%= f.submit class:"text-decoration-none btn btn-success"%>
<% end %>
</div>
<p><input type="checkbox" <%= @task.completed? ? "checked" : "" %>/> Completed âœ…</p>
<%= link_to '<i class="fa-solid fa-rotate-left"></i> Back to list'.html_safe, tasks_path, class:"text-decoration-none" %>
</div>
